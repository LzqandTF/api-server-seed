<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="seed.dao.UserDao">
  <resultMap id="UserResultMap" type="seed.models.User">
    <id column="id" property="id" jdbcType="CHAR" />
    <result column="code" property="code" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="org_id" property="orgId" jdbcType="CHAR" />
    <result column="sex" property="sex" jdbcType="SMALLINT" />
    <result column="id_card" property="idCard" jdbcType="VARCHAR" />
    <result column="phone" property="phone" jdbcType="VARCHAR" />
    <result column="header_img" property="headerImg" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="SMALLINT" />
    <result column="memo" property="memo" jdbcType="VARCHAR" />
    <result column="ts" property="ts" jdbcType="TIMESTAMP"  />
    <result column="dr" property="dr" jdbcType="SMALLINT" />
  </resultMap>
  <select id="selectByLoginName" resultMap="UserResultMap" parameterType="java.lang.String">
    select
      id,
      code,
      name,
      password,
      org_id,
      sex,
      id_card,
      phone,
      header_img,
      status,
      ts,
      dr
    from  sm_user
    where dr = 0 and code = #{code}
  </select>
  <select id="selectAllUsers" resultMap="UserResultMap" >
    select
      id,
      code,
      name,
      password,
      org_id,
      sex,
      id_card,
      phone,
      header_img,
      status,
      ts,
      dr
    from  sm_user
    where dr = 0
  </select>
</mapper>